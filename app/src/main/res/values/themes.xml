    <!-- Base application theme. -->
    <style name="Theme.Shop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_primary</item>
        <item name="colorPrimaryDark">@color/main_primary_dark</item>
        <item name="colorOnPrimary">@color/main_on_primary</item>
        <item name="colorAccent">@color/main_accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorOnPrimarySurface">@color/main_on_primary_dark</item>
        <item name="android:textColorPrimary">@color/main_text_color_primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="Widget.Shop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shop.TextInputLayout.HintText</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/main_text_input_outline</item>
    </style>

    <style name="TextAppearance.Shop.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Shop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Shop.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Shop.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Shop</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shop.Toolbar</item>
    </style>

    <style name="TextAppearance.Shop.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Shop.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Shop.Section" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Shop.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/main_primary_light</item>
        <item name="colorOnPrimarySurface">@android:color/holo_blue_light</item>
        <item name="color">@android:color/holo_blue_light</item>
        <item name="colorOnPrimary">?attr/colorPrimaryDark</item>
    </style>
</resources>